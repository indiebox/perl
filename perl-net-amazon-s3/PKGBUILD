pkgname=$(basename $(pwd))
pkgver=0.80
pkgrel=1
pkgdesc='Use the Amazon S3 - Simple Storage Service'
_dist=Net-Amazon-S3
arch=('any')
url="https://metacpan.org/pod/Net::Amazon::S3"
license=('PerlArtistic')
depends=('perl')
makedepends=('perl-module-build')
options=('!emptydirs' purge)
source=("http://search.cpan.org/CPAN/authors/id/R/RC/RCONOVER/${_dist}-${pkgver}.tar.gz")
sha512sums=('0a6a60e9c227e5646c21585b90c6d2cc437cb7c898cc69b8d4165ee426b9b22e14c94c5c95cffcbfc4b1f310a910dbcd2a03eba06d0eb86192d25458856ed254')

build() (
    cd "${srcdir}/${_dist}-${pkgver}"
    unset PERL5LIB PERL_MM_OPT PERL_MB_OPT PERL_LOCAL_LIB_ROOT
#    export PERL_MM_USE_DEFAULT=1 MODULEBUILDRC=/dev/null
    /usr/bin/perl Makefile.PL
    make
)

package() (
    cd "${srcdir}/${_dist}-${pkgver}"
    unset PERL5LIB PERL_MM_OPT PERL_MB_OPT PERL_LOCAL_LIB_ROOT
    make install INSTALLDIRS=vendor DESTDIR="${pkgdir}"
)
